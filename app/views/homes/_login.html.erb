<div id="both-forms">
  <div id="login-form">
    <div class="form-type">
      <form action="/login" method="post">

        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <label for="">Email</label>
        <input type="email" name="email">

        <label for="">Password</label>
        <input type="password" name="password">

        <button class="sign-in-btn">Log In</button>

        <p>Not a user yet ? <a id="signup-underline" class="link-underline" href="#">Sign up now!</a></p>
      </form>
    </div>
  </div>

  <div id="signup-form">
    <div class="form-type">
      <form action="/users" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <label for="">Username</label>
        <input type="text" name="name">
        <label for="">Email</label>
        <input type="email" name="email">
        <label for="">Password</label>
        <input type="password" name="password">

        <button class="sign-in-btn">Sign Up</button>

        <p>Already a user ? <a id="login-underline" class="link-underline" href="#">Login</a></p>
      </form>
    </div>
  </div>
</div>
